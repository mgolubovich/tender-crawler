- @title = 'Tenders list'
%h1 Tenders list
.container-fluid
  = will_paginate @tenders, renderer: BootstrapPagination::Sinatra
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %td Code by source
        %td Source
        %td Tender title
        %td Link
        %td Created At
        %td Updated At
    %tbody
      - @tenders.each do |tender|
        %tr
          %td
            %a{ href: "/tenders/show/#{tender.id}"}= tender.code_by_source
          %td= tender.source.name
          %td= tender.title
          %td
            %a{ href: tender.source_link, target: :blank}= tender.source_link
          %td= tender.created_at
          %td= tender.updated_at

= will_paginate @tenders, renderer: BootstrapPagination::Sinatra
