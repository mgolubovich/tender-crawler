- @title = 'New selector'
%h1 Новый селектор
.container-fluid
  %form.form-horizontal{:action => "/sources/edit/add_s", :method => "post"}
    %fieldset

      .form-group
        %label.col-md-4.control-label{:for => "selector_value"} value_type
        .col-md-5
          %input.form-control.input-md{:id => "selector_value", :name => "selector_value", :type => "text", :size => 20}

      .form-group
        %label.col-md-4.control-label{:for => "selector_link"} link_template
        .col-md-5
          %input.form-control.input-md{:id => "selector_link", :name => "selector_link", :type => "text", :size => 20}

      .form-group
        %label.col-md-4.control-label{:for => "selector_xpath"} xpath
        .col-md-5
          %input.form-control.input-md{:id => "selector_xpath", :name => "selector_xpath", :type => "text", :size => 20}

      .form-group
        %label.col-md-4.control-label{:for => "selector_css"} css
        .col-md-5
          %input.form-control.input-md{:id => "selector_css", :name => "selector_css", :type => "text", :size => 20}

      .form-group
        %label.col-md-4.control-label{:for => "selector_attr"} attr
        .col-md-5
          %input.form-control.input-md{:id => "selector_attr", :name => "selector_attr", :type => "text", :size => 20}

      .form-group
        %label.col-md-4.control-label{:for => "selector_offset"} offset
        .col-md-5
          %input.form-control.input-md{:id => "selector_offset", :name => "selector_offset", :type => "text", :size => 20}

      .form-group
        %label.col-md-4.control-label{:for => "selector_regexp"} regexp
        .col-md-5
          %input.form-control.input-md{:id => "selector_regexp", :name => "selector_regexp", :type => "text", :size => 20}

      .form-group
        %label.col-md-4.control-label{:for => "selector_date_format"} date_format
        .col-md-5
          %input.form-control.input-md{:id => "selector_date_format", :name => "selector_date_format", :type => "text", :size => 20}

      .form-group
        %label.col-md-4.control-label{:for => "selector_js_code"} js_code
        .col-md-5
          %input.form-control.input-md{:id => "selector_js_code", :name => "selector_js_code", :type => "text", :size => 20}

      .form-group
        %label.col-md-4.control-label{:for => "selector_activity"} Активность
        .col-md-5
          %select.form-control{:id => "selector_activity", :name => "selector_activity"}
            %option{:value => "active"} Включен
            %option{:value => "blocked"} Выключен

      .form-group
        .col-md-5
          %input.btn{:name => "submint", :type => "submit", :value => "Сохранить"}


